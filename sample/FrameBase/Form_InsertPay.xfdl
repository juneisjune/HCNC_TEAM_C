<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="Form_InsertPay" width="1280" height="720" titletext="급여 등록" onload="Form_InsertPay_onload">
    <Layouts>
      <Layout height="720" mobileorientation="landscape" width="1280">
        <Static id="title" taborder="0" text="급여 등록" left="60" top="12" width="278" height="78"/>
        <Static id="stc_Assign" taborder="1" text="직책" left="60" top="71" width="120" height="60"/>
        <Combo id="cmb_Assign" taborder="2" text="" left="95" top="91" width="105" height="20" innerdataset="ds_AssignType" codecolumn="assign_code" datacolumn="assign_name" onitemchanged="Combo00_onitemchanged" font="12pt/normal gulim"/>
        <Button id="btn_Search" taborder="3" text="조회" left="215" top="91" width="43" height="20" onclick="btn_Search_onclick"/>
        <Grid id="grd_Emp" taborder="4" left="60" top="125" width="830" height="330" binddataset="ds_EmpList" onheadclick="grd_Emp_onheadclick">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="48"/>
                <Column size="67"/>
                <Column size="92"/>
                <Column size="70"/>
                <Column size="97"/>
                <Column size="121"/>
                <Column size="119"/>
                <Column size="213"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell displaytype="checkboxcontrol" edittype="checkbox"/>
                <Cell col="1" text="사번"/>
                <Cell col="2" text="이름"/>
                <Cell col="3" text="직책"/>
                <Cell col="4" text="부서"/>
                <Cell col="5" text="입사일"/>
                <Cell col="6" text="퇴사일"/>
                <Cell col="7" text="계좌번호"/>
